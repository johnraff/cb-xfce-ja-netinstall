        <separator/>
        <menu execute="cb-places-pipemenu" id="pipe-placesmenu" label="場所"/>
        <menu execute="cb-recent-files-pipemenu" id="pipe-recentfilesmenu" label="最近のファイル"/>
        <separator/>
        <menu id="settings" label="設定">
            <menu execute="cb-compositor" id="CompositingPipeMenu" label="コンポジット"/>
            <menu id="conkyconfig" label="Conky">
                <item label=".conkyrc を編集">
                    <action name="Execute">
                        <command>
                            geany ~/.conkyrc
                        </command>
                    </action>
                </item>
                <item label="Conky を再起動">
                    <action name="Execute">
                        <command>
                            conkywonky
                        </command>
                    </action>
                </item>
                <separator label="ヘルプ"/>
                <item label="man page">
                    <action name="Execute">
                        <command>
                            terminator --command="man conky"
                        </command>
                    </action>
                </item>
                <item label="Wiki ページ">
                    <action name="Execute">
                        <command>
                            x-www-browser http://crunchbanglinux.org/wiki/conky
                        </command>
                    </action>
                </item>
            </menu>
            <menu id="dmenuconfig" label="dmenu">
                <item label="起動スクリプトを編集">
                    <action name="Execute">
                        <command>
                            geany ~/.config/dmenu/dmenu-bind.sh
                        </command>
                    </action>
                </item>
                <separator label="ヘルプ"/>
                <item label="man page">
                    <action name="Execute">
                        <command>
                            terminator --command="man dmenu"
                        </command>
                    </action>
                </item>
            </menu>
            <menu id="gmrunconfig" label="gmrun">
                <item label="設定ファイルを編集">
                    <action name="Execute">
                        <command>
                            geany ~/.gmrunrc
                        </command>
                    </action>
                </item>
                <separator label="ヘルプ"/>
                <item label="man page">
                    <action name="Execute">
                        <command>
                            terminator --command="man gmrun"
                        </command>
                    </action>
                </item>
            </menu>
            <menu id="obConfig" label="Openbox">
                <item label="menu-ja.xmlを編集">
                    <action name="Execute">
                        <command>
                            geany ~/.config/openbox/menu-ja.xml
                        </command>
                    </action>
                </item>
                <item label="rc.xmlを編集">
                    <action name="Execute">
                        <command>
                            geany ~/.config/openbox/rc.xml
                        </command>
                    </action>
                </item>
                <item label="autostartを編集">
                    <action name="Execute">
                        <command>
                            geany ~/.config/openbox/autostart
                        </command>
                    </action>
                </item>
<!--
                <separator/>
                <item label="GUI メニューエディタ">
